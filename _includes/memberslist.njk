<h2>Platinum</h2>
<ul class="memberslist">
    {% for member in memberslist %}
        {% if member.data.level == "platinum" %}
            <li class="platinummember">
              <div {% if member.data.founding %}style="background-image: url('{{ member.data.founding }}'" {% endif %} alt="Founding Member" class="founding"></div>
              <div>
                {% if member.data.logo %}
                     <a href="{{ member.data.url }}" rel="nofollow"><img src="{{ member.data.logo }}" alt="{{ member.data.name }}"/></a>
                {% endif %}
              </div>
            </li>
        {% endif %}
    {% endfor %}
</ul>
